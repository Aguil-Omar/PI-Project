<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #F0F4F8;"
            stylesheets="/InterfaceUtilisateur/styles/styles.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pi_dev.controllers.gestion_utilisateur.listUtilisateur">

    <!-- Nav Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #03045F;">
            <children>
                <!-- Logo -->
                <Label style="-fx-text-fill: white; -fx-font-size: 30px; -fx-padding: 0 0 0 15px; -fx-font-weight: bold;" text="Eventopia" />
                <Region HBox.hgrow="ALWAYS" />

                <!-- Bouton Ajouter Utilisateur -->
                <Button styleClass="add-user-button" onAction="#handleAddUtilisateur" text="Add User">
                    <graphic>
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px;">+</Label>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>

    <!-- TableView and Search Section -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <!-- Search Section -->
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="1200.0" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 10;">
                <children>
                    <TextField fx:id="searchField" promptText="Search users..." styleClass="search-field" />
                </children>
            </HBox>

            <!-- Table Section -->
            <TableView fx:id="utilisateurTable" styleClass="styled-table" VBox.vgrow="ALWAYS">
                <!-- Configuration pour que les colonnes s'Ã©tendent sur toute la largeur -->
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>

                <columns>
                    <!-- Avatar Column -->
                    <TableColumn fx:id="imageColumn" text="Avatar">
                        <cellValueFactory>
                            <PropertyValueFactory property="imageUrl" />
                        </cellValueFactory>
                    </TableColumn>

                    <!-- Other columns -->
                    <TableColumn fx:id="nomColumn" text="First Name" />
                    <TableColumn fx:id="prenomColumn" text="Last Name" />
                    <TableColumn fx:id="emailColumn" text="Email" />
                    <TableColumn fx:id="motDePasseColumn" text="Password" />
                    <TableColumn fx:id="roleColumn" text="Role" />
                    <TableColumn fx:id="codePostalColumn" text="Postal Code" />
                    <TableColumn fx:id="regionColumn" text="Region" />
                    <TableColumn fx:id="telColumn" text="Phone" />
                    <TableColumn fx:id="updateColumn" text="Update" />
                    <TableColumn fx:id="deleteColumn" text="Delete" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>