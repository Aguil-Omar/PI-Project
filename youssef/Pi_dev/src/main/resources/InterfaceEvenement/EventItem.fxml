<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox   prefWidth="750.0" prefHeight="150.0" spacing="10" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pi_dev.controllers.EvenementController.EvenementItem">
    <children >

        <HBox spacing="10" HBox.hgrow="ALWAYS" >

            <ImageView fx:id="eventImage" fitHeight="100" fitWidth="100"/>
            <VBox HBox.hgrow="ALWAYS">
                <Label fx:id="eventTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
                <Label fx:id="eventDate" style="-fx-font-size: 14px;"/>
                <Label fx:id="eventDescription" wrapText="true" prefWidth="600"/>
                <!-- Ajout du Label pour le prix -->
                <Label fx:id="eventPrice" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #03045F;"/>
            </VBox>
        </HBox>
        <!-- Ajout du bouton "More Details" -->

    </children>
</VBox>
