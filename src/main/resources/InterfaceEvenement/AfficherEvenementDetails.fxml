<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" stylesheets="@../styles/EventDetails.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pi_dev.controllers.EvenementController.AfficherEvenementDetails">

    <children>
        <!-- Texte pour afficher les détails de l'événement -->
        <Text fx:id="eventDetailsText" layoutX="50.0" layoutY="50.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

        <!-- Bouton pour ajouter un programme -->
        <Button layoutX="50.0" layoutY="200.0" onAction="#addProgramme" styleClass="button-addProgram" text="Ajouter Programme" />

        <!-- Bouton pour afficher les programmes liés -->
        <Button layoutX="50.0" layoutY="244.0" onAction="#navigateProgramme" prefHeight="41.0" prefWidth="171.0" styleClass="button-navigateProgram" text="voir Programmes" />
        <Button layoutX="231.0" layoutY="199.0" onAction="#navigateComments" prefHeight="42.0" prefWidth="164.0" styleClass="button-navigateComment" text="voir Comments" />
        <Button layoutX="532.0" layoutY="437.0" onAction="#navigateEvents" prefHeight="37.0" prefWidth="142.0" styleClass="button-navigateEvent" text="retourner" />
    </children>
</AnchorPane>
