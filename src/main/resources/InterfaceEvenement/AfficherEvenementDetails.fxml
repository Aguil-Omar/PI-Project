<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pi_dev.controllers.EvenementController.AfficherEvenementDetails">

    <children>
        <!-- Texte pour afficher les détails de l'événement -->
        <Text fx:id="eventDetailsText" layoutX="50.0" layoutY="50.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

        <!-- Bouton pour ajouter un programme -->
        <Button layoutX="50.0" layoutY="200.0" onAction="#addProgramme" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;" text="Ajouter Programme" />

        <!-- Bouton pour afficher les programmes liés -->
        <Button layoutX="200.0" layoutY="200.0" onAction="#navigateProgramme" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;" text="Afficher Programmes" />
        <Button layoutX="394.0" layoutY="200.0" onAction="#navigateComments" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;" text="voir Comments" />
    </children>
</AnchorPane>
