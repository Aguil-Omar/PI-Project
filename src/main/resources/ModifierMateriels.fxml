<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Materiels.controllers.ModifierMateriels">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Modifier le Matériel" />


        <Label layoutX="20.0" layoutY="60.0" text="Nom :" />
        <TextField fx:id="txtNom" layoutX="100.0" layoutY="60.0" prefWidth="200.0" />


        <Label layoutX="20.0" layoutY="100.0" text="Prix :" />
        <TextField fx:id="txtPrix" layoutX="100.0" layoutY="100.0" prefWidth="200.0" />


        <Label layoutX="20.0" layoutY="140.0" text="État :" />
        <ComboBox fx:id="cmbEtat" layoutX="100.0" layoutY="140.0" prefWidth="200.0" />


        <Button fx:id="btnModifier" layoutX="100.0" layoutY="200.0" text="Modifier" onAction="#update" />
        <Button fx:id="btnAnnuler" layoutX="200.0" layoutY="200.0" text="Annuler" onAction="#annuler"/>
    </children>
</AnchorPane>