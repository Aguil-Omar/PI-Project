<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="700.0" stylesheets="styles/styles.css" prefWidth="1200.0" style="-fx-background-color: #F0F4F8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.gestion_utilisateur.listUtilisateur">

    <!-- Navbar -->
    <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="1200.0"
          style="-fx-background-color: #03045F; -fx-padding: 15 30 15 30;">
        <children>
            <Label fx:id="headerLabel" text="Eventopia - User Management"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />

            <!-- User Profile Section -->
            <HBox alignment="CENTER_RIGHT" spacing="10" onMouseClicked="#goToModifyProfile"
                  style="-fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15 5 15; -fx-background-radius: 5;">
                <children>
                    <Label fx:id="loggedUserName"
                           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <ImageView fx:id="userIcon" fitHeight="40.0" fitWidth="40.0"
                               />

                </children>
            </HBox>
            <ImageView fx:id="logoutIcon" fitHeight="30.0" fitWidth="30.0"
                       pickOnBounds="true" preserveRatio="true"
                       onMouseClicked="#logout" >
                <Image url="/assets/logout.png"></Image>
            </ImageView>
        </children>
    </HBox>
    <!-- Search and Add Button Section -->
    <HBox alignment="CENTER_RIGHT" layoutY="100.0" prefHeight="70.0" prefWidth="1200.0" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 15 30 15 30;">
        <children>
            <TextField fx:id="searchField" promptText="Search users..." styleClass="search-field" />
            <Button mnemonicParsing="false" onAction="#handleAddUtilisateur" styleClass="add-button" text="Add User" />
        </children>
    </HBox>

    <!-- Table Section -->
    <VBox alignment="CENTER" layoutY="170.0" prefHeight="530.0" prefWidth="1200.0" spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
        <children>
            <TableView fx:id="utilisateurTable" AnchorPane.topAnchor="170.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="styled-table">
                <columns>
                    <!-- Avatar Column -->
                    <TableColumn fx:id="imageColumn" prefWidth="80" text="Avatar">
                        <cellValueFactory>
                            <PropertyValueFactory property="imageUrl" />
                        </cellValueFactory>
                    </TableColumn>

                    <!-- Other columns -->
                    <TableColumn fx:id="nomColumn" prefWidth="120" text="First Name" />
                    <TableColumn fx:id="prenomColumn" prefWidth="120" text="Last Name" />
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                    <TableColumn fx:id="motDePasseColumn" prefWidth="150" text="Password" />
                    <TableColumn fx:id="roleColumn" prefWidth="100" text="Role" />
                    <TableColumn fx:id="codePostalColumn" prefWidth="100" text="Postal Code" />
                    <TableColumn fx:id="regionColumn" prefWidth="120" text="Region" />
                    <TableColumn fx:id="telColumn" prefWidth="100" text="Phone" />
                    <TableColumn fx:id="updateColumn" prefWidth="80" text="Update" />
                    <TableColumn fx:id="deleteColumn" prefWidth="80" text="Delete" />
                </columns>
            </TableView>
        </children>
    </VBox>
</AnchorPane>
